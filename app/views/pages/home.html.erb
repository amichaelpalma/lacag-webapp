  <!-- First Row #SHOWCASE and #EVENTS -->
    <div class="row row-eq-height justify-content-between">

      <div class="col-sm-8 mt-4">
        <div class="col-sm-12 text-center left-col-showcase">
          THIS AREA WILL SHOWCASE A CAROUSEL ABOUT THE ORGANISATION
        </div>
      </div>

      <div class="col-sm-4 mt-4">
        <div class="col-sm-12 text-center right-col-events">
          THIS AREA WILL POST EVENTS AND DATES OF EVENTS.
          IT WILL ALSO SHOWCASE PICTURES OF EVENTS AND ONCE CLICKED, WILL REDIRECT A NON-USER TO THE EVENTS_PATH WHERE THEY CAN SEE THE DETAILS OF THE EVENTS (Event Name, What's it for, Photo of the Event, Attendees and a whole lot more.)
        </div>
      </div>

    </div>
    <!-- First Row #SHOWCASE and #EVENTS //end -->

    <!-- Second Row #DONATIONS --START-- -->
    <div class="container-fluid mb-4">
      <div class="row">
        <div class="col-sm-12 mt-4 donations-showpage">
            
            <!-- Donation Card --START-- -->
            
            <div class="container">
              <div class="row">
                <% @donations.each do |donation| %>
                <div class="col col-sm-4 d-flex align-items-stretch">
                  <div class="card text-white bg-primary">
                    <div class="card-header text-center">
                      <h5><%= donation.item_name %></h5>
                    </div>
                      <div class="card-body">
                        <% if donation.item_photo.attached? %>
                        <p> <%= image_tag donation.item_photo.variant(resize: '200x150!') %> </p>
                        <% else %>
                        <p>No Photo Attached</p>
                        <% end %>

                        <p class="card-text">
                          <%= donation.item_description %>
                        </p>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>

            <!-- Donation Card --END-- -->
        </div>
      </div>
    </div>
    <!-- Second Row #DONATIONS --END-- -->

    <div class="container">
      <div id="demo" class="carousel slide" data-ride="carousel">

  <!-- Indicators -->
  <ul class="carousel-indicators">
    <li data-target="#demo" data-slide-to="0" class="active"></li>
    <li data-target="#demo" data-slide-to="1"></li>
    <li data-target="#demo" data-slide-to="2"></li>
  </ul>

  <!-- The slideshow -->
  <div class="carousel-inner text-center" style="max-height: 20%; max-width: 30%">
    <div class="carousel-item active">
      <%= image_tag "LACAGTarp.jpg", style: "max-width: 200px;" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "LACAG Logo.png", style: "max-width: 200px;" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "LACAGTarp.jpg", style: "max-width: 200px; max-heigh: 20%;" %>
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="carousel-control-prev" href="#demo" data-slide="prev">
    <span class="carousel-control-prev-icon"></span>
  </a>
  <a class="carousel-control-next" href="#demo" data-slide="next">
    <span class="carousel-control-next-icon"></span>
  </a>

</div>
