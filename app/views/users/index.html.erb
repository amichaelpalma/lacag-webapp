<h1>Users</h1>

<table class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">Name</th>
      <th scope="col">Username</th>
      <% if current_user.username == "admin" %>
      <th scope="col">Options</th>
      <% end %>
    </tr>
  </thead>

  <% @users.each do |user| %>
   <tbody>
    <tr>
      <th scope="row"><%= user.id %></th>
      <td>
        <%= link_to user.full_name, user_path(user) %> 
      </td>
      <td><%= user.username %></td>

      <% if current_user.username == "admin" %>
      <td>
        <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-outline-primary btn-sm' %> 
        <%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user? He will no longer have access to the website."}, class: 'btn btn-outline-primary btn-sm'  %>
      </td>
      <% end %>
    </tr>
  </tbody>
  <% end %>
</table>
</table>

