

<% if current_user %>

<h1>Users</h1>

<table class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">Name</th>
      <th scope="col">Email Address</th>
      <th scope="col">Username</th>
      <th scope="col">Options</th>
    </tr>
  </thead>

  <% @users.each do |user| %>
   <tbody>
    <tr>
      <th scope="row"><%= user.id %></th>
      <td>
        <%= link_to user.full_name, user_path(user) %> 
      </td>
      <td><%= user.email %></td>
      <td><%= user.username %></td>
      <td>
        <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-outline-primary btn-sm' %> 
        <%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user? He will no longer have access to the website."}, class: 'btn btn-outline-primary btn-sm'  %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>
</table>

<% else %>
  <div class="text-center">
    <h1>Unauthorized Access</h1>
    <h3>Please log in to view this page.</h3>
  </div>


<% end %>
