<%= form_for @event do |f| %>

<div class="text-center user_form text-white">
<br>
<p>
  <%= f.label :title, 'TITLE' %> <br>
  <%= f.text_field :title, style: 'width: 75%;' %>
</p>

<p>
  <%= f.label :subtitle, 'EVENT DETAILS' %> <br>
  <%= f.text_area :subtitle, style: 'width: 75%;  height: 50px;' %>
</p>

<p>
  <%= f.label :event_images, 'IMAGES' %> <br>
  <%= f.file_field :event_images, multiple: true %>
</p>

<p>
  <%= f.label :tag, 'TAG' %> <br>
  <%= f.text_field :tag, style: 'width: 75%;' %>
</p>

<p>
  <%= f.label :details, 'EVENT STORY' %> <br>
  <%= f.text_area :details, style: 'width: 75%; height: 200px;' %>
</p>


<p>
  <%= f.submit 'Submit', class: 'btn' %>
  <%= link_to 'Back', events_path %>
</p>
</div>


<% end %>

